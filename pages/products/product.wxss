/* pages/index/products.wxss */
.page{
  display: flex;
  width: 100%;
  height: 100%;
  margin: 0px;
}
.muen{
  width: 30%;
  height: 100%;
  background-color: #fff;
  color: #888;
  font-size: 15px;
}
.content{
  flex: 1;
  height: 100%;
  background-color: #f0f0f0;
  padding:5px;
}
.cate{
  width: 100%;
  height:40px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid #999;
  position: relative;
}
.cateNum{
  position: absolute;
  top: 0px;
  right: 0px;
  background-color: #f00;
  color: #fff;
  border-radius: 50%;
  width:20px;
  height:20px;
  display: flex;
  justify-content: space-around;
  align-items: center; 
  font-size: 12px;
}
.cate-active{
  color: red;
  background-color:  #f0f0f0;
}
.product{
  width: 100%;
  height: 80px;
  display: flex;
  border-bottom: 1px solid #999;
  color: #888;
  padding-bottom: 5px;
  margin-top: 5px;
  font-size: 13px;
}
.pro_img{
  width: 38%;
  /* border: 1px solid red; */
}
.pro_img>image{
  width: 90%;
  height:100%;
}
.pro_info{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-left: 5px;
}
.pro_title{
  overflow: hidden;
}
.pro_old_price{
  text-decoration: line-through;
  font-size: 11px;
}
.pro_price{
  font-size: 13px;
  color: green;
}
.pro_nub{
  display: flex;
  flex-direction: row-reverse;
  padding-right: 10px;
}
.nub_control{
  flex: 0 0 15%;
  background-color: #e0e0e0;
  text-align: center;
}
.nub{
  flex: 0 0 15%;
  border: 1px solid #e0e0e0;
  background-color: #fff;
  text-align: center;
  font-size: 12px;
}