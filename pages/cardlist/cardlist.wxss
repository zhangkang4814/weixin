/* pages/cardlist/cardlist.wxss */
.color-df4{
  background-color: #df4133;
}
.color-ddd{
  background-color: #ddd;
  color:color-df4;
}
.card-content{
  width:100%;
  height:100%;
  background-color: #f0f0f0;
}
.card{
  width:100%;
  height:150px; 
  background-color:#fff;
  margin-bottom:10px;
  display:flex;
  flex-direction:column;
}
.card-details{
  height:60%;
  width:100%;
  display:flex;
  flex-direction:column;
  justify-content:center;
  padding-left:20px;
  color:#fff;
}
.card-details text:nth-child(1){
  font-size: 40rpx;
}
.card-details text:nth-child(2){
  font-size: 30rpx;
}
.card-details text:nth-child(3){
  font-size: 20rpx;
}
.card-true{
  flex: 1;
  display: flex;
  justify-content:center;
  align-items: center;
}
.card-true view{
  display: flex;
  justify-content:center;
  align-items: center;
  width:120px;
  height:40px;
  border-radius: 10px;
  color:#fff;
  font-size: 25rpx;
}